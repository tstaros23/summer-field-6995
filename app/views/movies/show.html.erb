<%= @movie.title %>
<%= @movie.creation_year %>
<%= @movie.genre %>
<% @actors.each do |actor| %>
  <%= actor.name %>
  <%= actor.age %>
<% end %>

<%= @movie.actors.average_age %>

<%= form_with url: "/actors/movies/#{@movie.id}", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.submit 'Submit' %>
<% end %>
